{
    "license": "MIT",
    "type": "library",
    "description": "A library to spin up a quick project structure",
    "keywords": ["skeleton","base directory"],
    "author": {
        "name": "Matt Trask",
        "role": "developer",
        "email": "mjftrask@gmail.com",
        "homepage": "https://matthewtrask.net"
    },
    "require": {
        "php": ">= 7.0",
        "symfony/console": "^3.1",
        "symfony/yaml": "^3.1"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0",
        "squizlabs/php_codesniffer": "2.6.2"
    },
    "autoload": {
        "psr-4": {
            "Skeleton\\": "src/"
        }
    },
    "scripts": {
        "test": [
          "@phpunit",
          "@phpcs"
        ],
        "phpunit": "php vendor/bin/phpunit",
        "phpcs": "php vendor/bin/phpcs"
    }
}
